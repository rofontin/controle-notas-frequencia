<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controlenotasfrequencia">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CadastroAlunos">
        <activity
            android:label="@string/alunos"
            android:name="com.example.controlenotasfrequencia.ListaAlunoActivity"
            android:exported="false" />

        <activity
            android:label="@string/cadastroAluno"
            android:name="com.example.controlenotasfrequencia.CadastroAlunoActivity"
            android:exported="false" />
        <activity
            android:name="com.example.controlenotasfrequencia.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.controlenotasfrequencia.model" />

        <meta-data
            android:name="DATABASE"
            android:value="cadastro_aluno.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
    </application>

</manifest>